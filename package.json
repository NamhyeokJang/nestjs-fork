{
  "$schema": "https://json.schemastore.org/package",
  "name": "server",
  "version": "1.0.0",
  "scripts": {
    "start:dev": "nest start --watch",
    "build": "nest build",
    "test": "jest --runInBand",
    "test:watch": "jest --watch --runInBand",
    "db:up": "docker-compose -f res/docker-compose.yml up",
    "typeorm": "ts-node -r dotenv/config -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:gen": "./gen-migration.sh",
    "migration:run": "pnpm typeorm migration:run -d",
    "migration:revert": "pnpm typeorm migration:revert -d"
  },
  "dependencies": {
    "@adminjs/design-system": "3.1.8",
    "@adminjs/express": "5.1.0",
    "@adminjs/nestjs": "5.1.1",
    "@adminjs/typeorm": "4.0.0",
    "@langchain/community": "0.0.20",
    "@langchain/core": "0.1.17",
    "@langchain/openai": "0.0.12",
    "@nestjs/common": "10.3.0",
    "@nestjs/core": "10.3.0",
    "@nestjs/platform-express": "10.3.0",
    "@nestjs/serve-static": "4.0.0",
    "@nestjs/swagger": "7.1.17",
    "@nestjs/typeorm": "10.0.1",
    "adminjs": "6.8.7",
    "bcrypt": "5.1.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "connect-pg-simple": "9.0.1",
    "d3-dsv": "2.0.0",
    "dayjs": "1.11.10",
    "dedent": "1.5.1",
    "dotenv": "16.3.1",
    "env-var": "7.4.1",
    "epub2": "3.0.2",
    "express": "4.18.2",
    "express-session": "1.17.3",
    "fs-extra": "11.2.0",
    "html-to-text": "9.0.5",
    "jsonwebtoken": "9.0.2",
    "langchain": "0.1.6",
    "lodash": "4.17.21",
    "mammoth": "1.6.0",
    "nestjs-form-data": "1.9.5",
    "nodemailer": "6.9.9",
    "officeparser": "4.0.6",
    "pdf-parse": "1.1.1",
    "pg": "8.11.3",
    "pg-boss": "9.0.3",
    "react": "18.2.0",
    "rxjs": "7.8.1",
    "ts-loader": "9.5.1",
    "typeorm": "0.3.19",
    "typeorm-naming-strategies": "4.1.0",
    "typeorm-transactional": "0.5.0",
    "uuid": "9.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "10.3.0",
    "@nestjs/testing": "10.3.0",
    "@types/bcrypt": "5.0.2",
    "@types/connect-pg-simple": "7.0.3",
    "@types/dedent": "0.7.2",
    "@types/express": "4.17.21",
    "@types/express-session": "1.17.10",
    "@types/fs-extra": "11.0.4",
    "@types/jest": "29.5.11",
    "@types/jsonwebtoken": "9.0.5",
    "@types/lodash": "4.14.202",
    "@types/node": "20.11.0",
    "@types/nodemailer": "6.4.14",
    "@types/react": "18.2.47",
    "@types/supertest": "6.0.2",
    "@types/uuid": "9.0.7",
    "@typescript-eslint/eslint-plugin": "6.18.1",
    "@typescript-eslint/parser": "6.18.1",
    "eslint": "8.56.0",
    "jest": "29.7.0",
    "prettier": "3.2.1",
    "supertest": "6.3.3",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.2",
    "typescript": "5.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".+(e2e-spec|spec).ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "setupFilesAfterEnv": [
      "./jest.setup.ts"
    ],
    "moduleNameMapper": {
      "^@slibs/common(|/.*)$": "<rootDir>/libs/common/src/$1",
      "^@slibs/database(|/.*)$": "<rootDir>/libs/database/src/$1",
      "^@slibs/api-key(|/.*)$": "<rootDir>/libs/api-key/src/$1",
      "^@slibs/health-check(|/.*)$": "<rootDir>/libs/health-check/src/$1",
      "^@slibs/swagger(|/.*)$": "<rootDir>/libs/swagger/src/$1",
      "^@slibs/pg-queue(|/.*)$": "<rootDir>/libs/pg-queue/src/$1",
      "^@slibs/admin(|/.*)$": "<rootDir>/libs/admin/src/$1",
      "^@slibs/langchain(|/.*)$": "<rootDir>/libs/langchain/src/$1",
      "^@slibs/storage(|/.*)$": "<rootDir>/libs/storage/src/$1",
      "^@slibs/user(|/.*)$": "<rootDir>/libs/user/src/$1",
      "^@slibs/mailer(|/.*)$": "<rootDir>/libs/mailer/src/$1",
      "^@slibs/client-secret(|/.*)$": "<rootDir>/libs/client-secret/src/$1",
      "^@slibs/ai-chat(|/.*)$": "<rootDir>/libs/ai-chat/src/$1"
    }
  }
}